{
	"root": "libs/verdaccio-approval-plugin",
	"targets": {
		"test": {
			"executor": "@nx/jest:jest",
			"options": {}
		},
		"build": {
			"executor": "@nx/js:tsc",
			"options": {
				"outputPath": "dist/libs/verdaccio-approval-plugin",
				"main": "libs/verdaccio-approval-plugin/src/index.ts",
				"tsConfig": "libs/verdaccio-approval-plugin/tsconfig.lib.json",
				"assets": [
					{
						"input": "libs/verdaccio-approval-plugin",
						"glob": "package.json",
						"output": "."
					}
				]
			}
		},
		"dev": {
			"executor": "nx:run-commands",
			"options": {
				"commands": ["chmod +x scripts/dev.sh && ./scripts/dev.sh"],
				"parallel": false
			}
		},
		"dev-rebuild": {
			"executor": "nx:run-commands",
			"options": {
				"commands": ["chmod +x scripts/dev.sh && ./scripts/dev.sh --rebuild"],
				"parallel": false
			}
		},
		"dev-stack": {
			"executor": "nx:run-commands",
			"options": {
				"commands": ["docker-compose up"],
				"parallel": false
			}
		}
	}
}
